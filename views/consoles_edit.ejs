<%- include("partials/header") %>

<div class="container">
	<h1>Edit Console</h1>
	<form action="/consoles/<%= consoless._id %>?_method=PUT" method="POST">
	  <div class="form-group">
		<label for="title">Name</label>
		<input type="text" class="form-control" name="title" value="<%= consoless.title %>">
	  </div>
	  <div class="form-group">
		<label for="description">Description</label>
		<input type="text" class="form-control" name="description" value="<%= consoless.description %>">
	  </div>
		<div class="form-group">
		<label for="brand">Brand</label>
		<select class="form-control" id="brand" name="brand">
				<option disabled> -- Choose below -- </option>
				<option <%= consoless.brand === 'Sony' ? 'selected' : ''%>>Sony</option>
				<option <%= consoless.brand === 'Microsoft' ? 'selected' : ''%>>Microsoft</option>
				<option <%= consoless.brand === 'Nintendo' ? 'selected' : ''%>>Nintendo</option>
		 </select>
	  </div>
	<div class="form-group">
		<label for="model">Model</label>
		<input type="text" class="form-control" name="model" value="<%= consoless.model %>">
	  </div>
	 <div class="form-group">
		<label for="date">Date</label>
		<input type="date" class="form-control" name="date" value="<%= consoless.date.toISOString().split('T')[0] %>">
	  </div>
		 <div class="form-group">
		<label for="issue">Issue</label>
		<input type="number" class="form-control" name="issue" value="<%= consoless.issue %>">
	  </div>
		 <div class="form-group form-check">
		<input type="checkbox" class="form-check-input" name="color" <%= consoless.color ? 'checked' : ''%>>
		<label for="color">Color?</label>
	  </div>
	  <div class="form-group">
		<label for="image">Link to Image</label>
		<input type="text" class="form-control" name="image" value="<%= consoless.image %>">
	  </div>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>


<%- include("partials/footer") %>